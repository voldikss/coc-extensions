{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": false,
    "declaration": false,
    "sourceMap": false,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@coc-extensions/common": ["packages/common/src"]
    }
  },
  "include": ["packages/*/src/**/*.ts"]
}
